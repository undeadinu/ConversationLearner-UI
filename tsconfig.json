{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "../node_modules",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
        "es2017",
        "dom"
    ],
    "keyofStringsOnly": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "types": [
      "node",
      "jest",
      "cypress"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "cypress",
    "src/setupTests.ts",
    "publish",
    "package"
  ],
  "include": [
    "**/*.ts"
  ]
}
